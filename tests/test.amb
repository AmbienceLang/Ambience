imp std.io as io;

func int factorial(int n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

class int main() {
    init num;
    init result;
    init choice = "Y";

    out!("Welcome to the Factorial Calculator!\n");

    while (choice == "Y" || choice == "y") {
        in!("Enter a number to calculate its factorial: {$i}", num);

        result = factorial(num);

        out!("The factorial of {$} is: {$}\n", num, result);

        in!("Do you want to calculate another factorial? (Y/N): {$s}", choice);
    }

    out!("Thank you for using the Factorial Calculator!\n");

    return 0;
}